<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    
    <persistence-unit name="PlaatMicro" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>nl.plaatsoft.plaatservice.dao.Status</class>
        <class>nl.plaatsoft.plaatservice.dao.Inventory</class>
        <class>nl.plaatsoft.plaatservice.dao.Subscription</class>
                
    </persistence-unit>
</persistence>



